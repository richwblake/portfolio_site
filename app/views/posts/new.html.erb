<h2 class="form-header">Create Blog Post</h2>

<%= form_with model: @post, class: 'post-create-form' do |f| %>
  <%= f.label :title, 'Title:', class: 'form-label' %>
  <%= f.text_field :title, class: 'form-input' %>
  <br>
  <%= f.label :summary, 'Summary:', class: 'form-label' %>
  <%= f.text_field :summary, class: 'form-input' %>
  <br>
  <%= f.label :content, 'Content:', class: 'form-label' %>
  <%= f.text_area :content, class: 'form-input', rows: '20' %>
  <br>
  <div class="submit-btn">
    <%= f.submit 'Create Post' %>
  </div>
<% end %>