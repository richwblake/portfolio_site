<div class="post-show">
  <h1 class="post-title"><%= @post.title %></h2>
  <div class="post-content"><%= simple_format(@post.content, class: 'content-paragraph') %></div>

  <div class="comments">
    <% if !@comments.empty? %>
      <hr>
      <h1>Comments</h1>
    <% end %>
    <% @comments.each do |comment| %>
      <p><%= "#{comment.user.name}: #{comment.content}" %></p>
    <% end %>
  </div>

  <hr>

  <%= form_with model: @comment, class: 'new-comment-form' do |f| %>
    <%= f.label :content, 'Leave a comment:', class: 'content-label' %>
    <br><br>
    <%= f.text_area :content, class: 'content-field', rows: 8, cols: 50 %>
    <br>
    <%= hidden_field_tag :post_id, @post.id %>
    <%= f.submit 'Leave comment', class: 'submit-btn' %>
  <% end %>
</div>


