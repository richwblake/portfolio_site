<h2 class="form-header">Create account</h2>
<%= form_with model: @user, class: 'form' do |f| %>
  <%= f.label :email, 'Email:', class: 'form-label' %>
  <%= f.email_field :email, class: 'form-input' %>
  <br>
  <%= f.label :name, 'Name:', class: 'form-label' %>
  <%= f.text_field :name, class: 'form-input' %>
  <br>
  <%= f.label :password, 'Password:', class: 'form-label' %>
  <%= f.password_field :password, class: 'form-input' %>
  <br>
  <%= f.label :password_confirmation,'Confirm password:', class: 'form-label' %>
  <%= f.password_field :password_confirmation, class: 'form-input' %>
  <br>
  <div class="submit-btn">
    <%= f.submit 'Create Account' %>
  </div>
<% end %>